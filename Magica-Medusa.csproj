<Project Sdk="Godot.NET.Sdk/4.6.1">
    <PropertyGroup>
        <TargetFramework>net10.0</TargetFramework>
        <TargetFramework Condition=" '$(GodotTargetPlatform)' == 'android' ">net9.0</TargetFramework>
        <EnableDynamicLoading>true</EnableDynamicLoading>
        <RootNamespace>MagicaMedusa</RootNamespace>
        <Nullable>enable</Nullable>
        <LangVersion>preview</LangVersion>
    </PropertyGroup>
    <ItemGroup>
        <Compile Remove="scripts\core\ui\UiFactory.cs"/>
        <Compile Remove="scenes\**"/>
        <Compile Include="script_templates\Node\SimpleSceneControllerTemplate.cs"/>
        <Compile Remove="script_templates\**"/>
    </ItemGroup>
    <ItemGroup>
        <EmbeddedResource Remove="scenes\**"/>
        <EmbeddedResource Remove="script_templates\**"/>
    </ItemGroup>
    <ItemGroup>
        <PackageReference Update="Meziantou.Analyzer" Version="3.0.18">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
        </PackageReference>
        <PackageReference Update="Meziantou.Polyfill" Version="1.0.101">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
        </PackageReference>
        <PackageReference Include="GeWuYou.GFramework" Version="0.0.197" />
        <PackageReference Include="GeWuYou.GFramework.Godot" Version="0.0.197" />
        <PackageReference Include="GeWuYou.GFramework.Godot.SourceGenerators" Version="0.0.197" />
        <PackageReference Include="GeWuYou.GFramework.SourceGenerators" Version="0.0.197" />
        <PackageReference Include="Mediator.SourceGenerator" Version="3.0.1">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
    </ItemGroup>
    <ItemGroup>
        <Content Include=".github\dependabot.yml"/>
        <Content Include=".github\workflows\auto-tag.yml"/>
        <Content Include=".github\workflows\ci.yml"/>
        <Content Include=".github\workflows\codeql.yml"/>
        <Content Include=".github\workflows\release.yml"/>
        <Content Include="addons.jsonc"/>
        <Content Include="global\README.md"/>
        <Content Include="scripts\data\model\README.md"/>
        <Content Include="scripts\data\README.md"/>
        <Content Include="scripts\entities\README.md"/>
        <Content Include="scripts\module\README.md"/>
    </ItemGroup>
    <ItemGroup>
        <Folder Include="scripts\enums\game\"/>
        <Folder Include="scripts\extensions\"/>
        <Folder Include="scripts\intro\"/>
        <Folder Include="scripts\main_menu\"/>
        <Folder Include="scripts\tests\"/>
        <Folder Include="scripts\test\"/>
    </ItemGroup>
</Project>